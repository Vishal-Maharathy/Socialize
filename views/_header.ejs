<header>
    <div id="header">
        <div id="logo_text">
            <a href="/" style="text-decoration: none;">
                <img id="title-image" src="/uploads/images/Socialize.png" alt="Socialize">
            </a>
        </div>
        <% if(!locals.user){ %>
            <div>
                <a href="signin">SignIn</a>
                <p style="display: inline-block; color: #8206e8;">|</p>
                <a href="signup">SignUp</a>
            </div>
        <% } %>
        <% if(locals.user){ %>
            <div id="top-right-options">
                <!-- from here we will load notifications in a small div -->
                <a id="profile-page-text" href="/notifications/<%=user.id %>" class="notification" id="notification-toggle">
                    <span>Inbox</span>
                    <span class="badge"><%=no_of_notif%></span>
                </a>
                <a  id="profile-page-img" href="/notifications/<%=user.id %>" class="notification" id="notification-toggle">
                    <img src="https://img.icons8.com/nolan/64/appointment-reminders.png" alt="">
                    <span class="badge"><%=no_of_notif%></span>
                </a>
                <a id="profile-page-text" href="/users/profile/<%= user.id %>">Profile</a>
                <a id="profile-page-img" href="/users/profile/<%= user.id %>"><img src="https://img.icons8.com/nolan/64/user.png" alt=""></a>
            </div>
            <div id="notification-box">
                <h2>Notifications</h2>
            </div> 
        <% } %>
    </div>
</header>
<script src="/js/notification.js"></script>

